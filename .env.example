# CrownDesk V2 - Environment Variables

# Application
NODE_ENV=development
PORT=4000
CORS_ORIGINS=http://localhost:3000
# Production: https://crowndesk-web.vercel.app,https://portal.crowndesk.xaltrax.com
# Comma-separated for multiple origins

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/crowndesk_dev
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Stripe Billing
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_WEBHOOK_SECRET_DEV=your_stripe_webhook_secret_dev_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Stedi EDI
STEDI_API_KEY=your_stedi_api_key_here
DEV_STEDI_API_KEY=test_your_stedi_test_key_here

# AWS
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=crowndesk-storage
S3_BUCKET_AUDIO=crowndesk-audio

# Open Dental PMS
# Auth uses ODFHIR scheme: Authorization: ODFHIR {DeveloperKey}/{CustomerKey}
# Test credentials: OPENDENTAL_DEV_KEY=NFF6i0KrXrxDkZHt OPENDENTAL_CUSTOMER_KEY=VzkmZEaUWOjnQX2z
OPENDENTAL_AUTH_SCHEME=ODFHIR
OPENDENTAL_DEV_KEY=NFF6i0KrXrxDkZHt
OPENDENTAL_CUSTOMER_KEY=VzkmZEaUWOjnQX2z
OPENDENTAL_BASE_URL=https://api.opendental.com

# AI Service
AI_SERVICE_URL=http://localhost:8000

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
